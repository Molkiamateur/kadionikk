void BSP_init(void){
	for (i = 0;i< 10;i++){
		BSP_clrLED(i);
	}
	SEG7_off();


}

void BSP_setLED(unsigned char lite){
	led_status = IORD(LEDS_BASE,0);
	led_status = led_status | 1 << lite;
	IOWR(LEDS_BASE,0,led_status);
}

void BSP_clrLED(unsigned char lite){
	led_status = IORD(LEDS_BASE,0);
	led_status = led_status & ~(1 << lite);
	IOWR(LEDS_BASE,0,led_status);
}

unsigned int BSP_readSW(){
	return IORD(SWITCHS_BASE,0);
}

