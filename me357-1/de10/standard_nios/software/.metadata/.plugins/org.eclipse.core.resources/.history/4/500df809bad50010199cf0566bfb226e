* Description:                                                           *
* The following is a simple hello world program running MicroC/OS-II.The * 
* purpose of the design is to be a very simple application that just     *
* demonstrates MicroC/OS-II running on NIOS II.The design doesn't account*
* for issues such as checking system call return codes. etc.             *
*                                                                        *
* Requirements:                                                          *
*   -Supported Example Hardware Platforms                                *
*     Standard                                                           *
*     Full Featured                                                      *
*     Low Cost                                                           *
*   -Supported Development Boards                                        *
*     Nios II Development Board, Stratix II Edition                      *
*     Nios Development Board, Stratix Professional Edition               *
*     Nios Development Board, Stratix Edition                            *
*     Nios Development Board, Cyclone Edition                            *
*   -System Library Settings                                             *
*     RTOS Type - MicroC/OS-II                                           *
*     Periodic System Timer                                              *
*   -Know Issues                                                         *
*     If this design is run on the ISS, terminal output will take several*
*     minutes per iteration.                                             *
**************************************************************************/


#include <stdio.h>
#include "includes.h"

/* Definition of Task Stacks */
#define   TASK_STACKSIZE       2048
OS_STK    task1_stk[TASK_STACKSIZE];
OS_STK    task2_stk[TASK_STACKSIZE];
OS_STK    task3_stk[TASK_STACKSIZE];
OS_STK    task4_stk[TASK_STACKSIZE];

/* Definition of Task Priorities */

#define TASK1_PRIORITY      1
#define TASK2_PRIORITY      2
#define TASK1_PRIORITY      3
#define TASK2_PRIORITY      4

/* Prints "Hello World" and sleeps for three seconds */
void task1(void* pdata)
{
	char dir;
	  dir = 0;
	  while(1) {

	    if(dir == 0){


		  BSP_setLED(1);
		  BSP_clrLED(0);

		  OSTimeDly(10);
	      BSP_setLED(2);
	      BSP_clrLED(1);

	      OSTimeDly(10);
	      BSP_setLED(3);
	      BSP_clrLED(2);

	      OSTimeDly(10);
	      BSP_setLED(4);
	      BSP_clrLED(3);

	      OSTimeDly(10);
	      BSP_setLED(5);
	      BSP_clrLED(4);

	      OSTimeDly(10);
	      BSP_setLED(6);
	      BSP_clrLED(5);

	      OSTimeDly(10);
	      BSP_setLED(7);
		  BSP_clrLED(6);

		  OSTimeDly(10);
		  BSP_setLED(8);
		  BSP_clrLED(7);

		  OSTimeDly(10);
		  BSP_setLED(9);
		  BSP_clrLED(8);



		  OSTimeDly(10);
	      dir = 1;
	    }
	    else if(dir == 1){
		  BSP_setLED(8);
		  BSP_clrLED(9);

		  OSTimeDly(10);
		  BSP_setLED(7);
		  BSP_clrLED(8);

		  OSTimeDly(10);
		  BSP_setLED(6);
		  BSP_clrLED(7);

		  OSTimeDly(10);
		  BSP_setLED(5);
	      BSP_clrLED(6);

	      OSTimeDly(10);
	      BSP_setLED(4);
	      BSP_clrLED(5);

	      OSTimeDly(10);
	      BSP_setLED(3);
	      BSP_clrLED(4);

	      OSTimeDly(10);
	      BSP_setLED(2);
	      BSP_clrLED(3);

	      OSTimeDly(10);
	      BSP_setLED(1);
	      BSP_clrLED(2);

	      OSTimeDly(10);
	      BSP_setLED(0);
		  BSP_clrLED(1);

		  OSTimeDly(10);
	      dir = 0;
	    }
	  }
}
/* Prints "Hello World" and sleeps for three seconds */
void task2(void* pdata)
{
  while (1)
  {
    printf("sw = 0x%x\n",BSP_readSW());
    OSTimeDlyHMSM(0, 0, 3, 0);
  }
}
void task3(void* pdata)
{
  int etat_1;
  int etat_2;
  int etat_prec = 0;
  int chg;
  int new_appui;

  while (1)
  { 
	for ( i=0; i< 4;i++){
		etat_1 = BSP_readBP(i);


	}

    printf("Hello from task1\n");
    OSTimeDlyHMSM(0, 0, 3, 0);
  }
}
void task1(void* pdata)
{
  while (1)
  { 
    printf("Hello from task1\n");
    OSTimeDlyHMSM(0, 0, 3, 0);
  }
}
/* The main function creates two task and starts multi-tasking */
int main(void)
{

  printf("MicroC/OS-II Licensing Terms\n");
  printf("============================\n");
  printf ("uC/OS-II is a portable, ROMable, scalable, preemptive, real-time deterministic \n");
  printf("multitasking kernel for microprocessors, microcontrollers and DSPs.\n");
  printf("This RTOS can be used free of charge under APACHE 2.0 License.\n");
  printf("for more information please see the license files included in the BSP project or contact Micrium.\n");
  printf("For the complete documentation, visit https://doc.micrium.com/display/ucos/\n\n\n");
    

  OSTaskCreateExt(task1,
                  NULL,
                  (void *)&task1_stk[TASK_STACKSIZE-1],
                  TASK1_PRIORITY,
                  TASK1_PRIORITY,
                  task1_stk,
                  TASK_STACKSIZE,
                  NULL,
                  0);
              
               
  OSTaskCreateExt(task2,
                  NULL,
                  (void *)&task2_stk[TASK_STACKSIZE-1],
                  TASK2_PRIORITY,
                  TASK2_PRIORITY,
                  task2_stk,
                  TASK_STACKSIZE,
                  NULL,
                  0);
  OSStart();
  return 0;
}

